{
	"name": "glimpse-electron",
	"private": true,
	"version": "0.1.1",
	"description": "AI-powered desktop chat application",
	"author": "Glimpse Team",
	"type": "module",
	"main": "out/main/index.js",
	"scripts": {
		"dev": "electron-vite dev",
		"build": "electron-vite build",
		"preview": "electron-vite preview",
		"lint": "eslint .",
		"package": "electron-builder",
		"package:mac": "electron-builder --mac",
		"package:win": "electron-builder --win",
		"package:linux": "electron-builder --linux",
		"package:all": "node build-all.js --all",
		"create-uninstaller": "node build/create-uninstaller.js"
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^1.2.12",
		"@ai-sdk/google": "^1.2.19",
		"@ai-sdk/openai": "^1.3.22",
		"@google-cloud/aiplatform": "^4.2.0",
		"@supabase/supabase-js": "^2.50.0",
		"ai": "^4.3.16",
		"electron-store": "^10.1.0",
		"electron-updater": "^6.6.2",
		"lucide-react": "^0.514.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"devDependencies": {
		"@electron-toolkit/preload": "^3.0.2",
		"@electron-toolkit/utils": "^4.0.0",
		"@eslint/js": "^9.25.0",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react": "^4.4.1",
		"electron": "^36.4.0",
		"electron-builder": "^24.13.3",
		"electron-vite": "^3.1.0",
		"eslint": "^9.25.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"globals": "^16.0.0",
		"supabase": "^2.24.3",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.30.1",
		"vite": "^6.3.5"
	},
	"build": {
		"appId": "com.glimpse.app",
		"productName": "Glimpse",
		"directories": {
			"output": "dist",
			"buildResources": "build"
		},
		"files": [
			"out/**/*",
			"public/**/*"
		],
		"extraResources": [
			{
				"from": "public/glimpse-icon3.png",
				"to": "."
			}
		],
		"win": {
			"icon": "build/icon.ico",
			"target": "nsis"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": false,
			"allowToChangeInstallationDirectory": true,
			"allowElevation": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "Glimpse",
			"include": "build/installer.nsh",
			"language": "1041",
			"artifactName": "${productName}-Setup-${version}.${ext}",
			"uninstallDisplayName": "Glimpse",
			"deleteAppDataOnUninstall": false
		},
		"mac": {
			"icon": "build/icon.png",
			"category": "public.app-category.productivity",
			"identity": null,
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				}
			],
			"hardenedRuntime": false,
			"gatekeeperAssess": false,
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist",
			"extendInfo": {
				"NSCameraUsageDescription": "Allow Glimpse to capture screenshots for AI assistance",
				"NSScreenCaptureDescription": "Allow Glimpse to capture screen content for AI assistance"
			}
		},
		"dmg": {
			"iconSize": 100,
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			],
			"window": {
				"width": 540,
				"height": 380
			}
		},
		"linux": {
			"icon": "build/icon.png",
			"target": "AppImage"
		},
		"publish": {
			"provider": "github",
			"owner": "musoukun",
			"repo": "Glimpse",
			"releaseType": "release",
			"publishAutoUpdate": true
		}
	}
}
